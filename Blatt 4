Aufgabe 16

a)
#include <stdio.h>

int funktion1(int x)
{
	char x;
	
	if ( x < 65 || x > 90)
	{
		printf("Ungueltige Eingabe");
	} 
	return x;
}
b)

#include <stdio.h>

int funktion2(int x)
{
	char x;
	
	x = x - 32;
	
	return x;
}

c)

#include <stdio.h>

int funktion1(int x)
{
	char x;
	
	if ( x >= 65 && x <= 90 || (x >= 97 && x <= 122))
	{
		printf("Eingabe gueltig");
	} else {
		printf("Eingabe ungueltig");
	}
	return x;
}

d)

#include <stdio.h>

char funktion1(char x);
char funktion2(char x);
char funktion3(char x);

int main(void)
{
	int status;
	char x;
	
	printf("\nGeben sie ein Zeichen ein: ");
	status = scanf("%c", &x);
	
	if (status != 1 || getchar() != '\n')
	{
		printf("Ungueltige Eingabe");
		return 1;
	}
	
	funktion1(x);
	funktion2(x);
	funktion3(x);
	return 0;
}

char funktion1(char x)
{
	
	if ( x < 65 || x > 90)
	{
		printf("\n a: Ungueltige Eingabe");
	} else {
		printf("\n a: Eingabe gueltig");
	}
	return x;
}

char funktion2(char x)
{
	if (x >= 65 && x <= 90)
	{	
		x = x + 32;
		printf("\n b: %c", x);
	} else {
		printf("\n b: Ungueltige Eingabe");
	}
	return x;
}

char funktion3(char x)
{
	
	if ((x >= 65 && x <= 90) || (x >= 97 && x <= 122))
	{
		printf("\n c: Eingabe gueltig");
	} else {
		printf("\n c: Eingabe ungueltig");
	}
	return x;
}
