Aufgabe06,
 
 a) 
  
 #include <stdio.h>
 
 int main(void)
 { 
	 char x;
	 char y;
  printf("\n Bitte zwei Buchstaben eingeben: ")
  x = getchar();
  y = getchar();
	
	 if ( x >= 'A' && x <= 'Z')
	{
		 printf("\n Sie haben einen Grossbuchstaben eingegeben.");
	}
	 else 
	{
		 printf("\n Sie haben einen Kleinbuchstaben eingegeben."); 
	}
	 if ( y >= 'A' && y <= 'Z')
	{
		 printf("\n Sie haben einen Grossbuchstaben eingegeben.");
	}
	 else 
	{
		 printf("\n Sie haben einen Kleinbuchstaben eingegeben."); 
	}
  
 return 0;
}
 
