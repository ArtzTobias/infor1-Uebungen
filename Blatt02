d) 

#include <stdio.h>

int main(void)
{
	int a;
	int b = 0;
	int c;
	
	printf("Geben sie eine ganze natuerliche Zahl ein: ");
	scanf("%i", &a);
	
	while( a > 0 )
	{
		a = a - 1;
		c = b + a;
		b = b + 3 * c;
		
		printf("\n %i", a);
	}
	printf("\n %i", b);
	
	
	return 0;
} 
 
