Aufgabe 11

a)

#include <stdio.h>

int main(void)
{
	double x;
	int test;
	
	printf("\n Geben sie eine Zahl ein: ");
	test = scanf("%lf", &x);

	if (test !=1 || getchar() != '\n')
	{	
		printf("1");
		return 1;
	}
	else 
		printf("%lf", x);
	return 0;
}

b)

#include <stdio.h>

int main(void)
{
	int x, y;
	int test;
	
	printf("\n Geben sie zwei ganze Zahlen ein mit einem Punkt zwischen den Zahlen ein: ");
	test = scanf("%i.%i", &x, &y);
	
	if (test !=2 || getchar() != '\n')
	{
		printf("1");
		return 1;
	}
	else 
		printf("\n Zahl 1: %i\n Zahl 2: %i", x, y);
	
	return 0;
}

c)

#include <stdio.h>
#include <ctype.h>

int main(void)
{
	char x, y, z;
	char test;
	
	printf("\nGeben sie drei Zeichen ein. Das erste Zeichen muss gross sein: ");
	test = scanf("%c%c%c", &x, &y, &z);
	
	if (test != 3 || getchar() != '\n' || islower(x))
	{
		printf("1");
		return 1;
	} else {
		printf("\n%c%c%c", x, y, z);
	}
	return 0;
}

d)

#include <stdio.h>

int main(void)
{
	int x;
	int test;
	
	printf("Geben sie eine ganze Zahl zwischen 1 bis 12 ein: ");
	test = scanf("%i", &x);
	
	if (test != 1 || getchar() != '\n' || (!((0 <= x) && (x <= 12))))
	{
		printf("1");
		return 1;
	} else {
		printf("Die eingebene Zahl ist: %i", x);
	}
	return 0;
}

e)

#include <stdio.h>

int main(void)
{
	int x;
	char y;
	int test;
	
	printf("\nGeben sie eine negative Zahl und einen Grossbuchstaben ein: ");
	test = scanf("%i%c", &x, &y);
	
	if (test != 2 || getchar() != '\n' || x >= 0 || (!((65 <= y) && (y <= 90))))
	{
		printf("1");
		return 1;
	} else {
		printf("Dies ist ihre Eingabe: %i%c", x, y);
	}
		
	return 0;
}

